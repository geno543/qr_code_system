<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QR Event Management System</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 80px 0;
        }
        .feature-card {
            transition: transform 0.3s ease;
            border: none;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
        .feature-card:hover {
            transform: translateY(-5px);
        }
        .upload-area {
            border: 2px dashed #ccc;
            border-radius: 10px;
            padding: 40px;
            text-align: center;
            transition: border-color 0.3s ease;
        }
        .upload-area:hover {
            border-color: #667eea;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/"><i class="fas fa-qrcode"></i> QR Event System</a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/scanner"><i class="fas fa-camera"></i> Scanner</a>
                <a class="nav-link" href="/admin"><i class="fas fa-cog"></i> Admin</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container text-center">
            <h1 class="display-4 fw-bold mb-4">QR Event Management System</h1>
            <p class="lead mb-5">Generate unique QR codes for your event attendees and manage check-ins efficiently</p>
        </div>
    </section>

    <!-- Main Content -->
    <div class="container my-5">
        <!-- Upload Section -->
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="fas fa-upload"></i> Upload Attendee List</h4>
                    </div>
                    <div class="card-body">
                        <div class="upload-area" id="uploadArea">
                            <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                            <h5>Upload Excel File</h5>
                            <p class="text-muted">Drag and drop your Excel file here or click to browse</p>
                            <input type="file" id="excelFile" accept=".xlsx,.xls" class="d-none">
                            <button type="button" class="btn btn-primary" onclick="document.getElementById('excelFile').click()">
                                <i class="fas fa-file-excel"></i> Choose File
                            </button>
                        </div>
                        <div class="mt-3">
                            <small class="text-muted">
                                <strong>Excel Format:</strong> Your file should contain columns named 'Name', 'Ticket_ID', and 'Email'
                            </small>
                        </div>
                        <div id="uploadStatus" class="mt-3"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Features Section -->
        <div class="row mt-5">
            <div class="col-md-4 mb-4">
                <div class="card feature-card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-qrcode fa-3x text-primary mb-3"></i>
                        <h5>Generate QR Codes</h5>
                        <p class="text-muted">Automatically generate unique QR codes for each attendee</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card feature-card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-shield-alt fa-3x text-success mb-3"></i>
                        <h5>One-Time Use</h5>
                        <p class="text-muted">Each QR code can only be scanned once for security</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card feature-card h-100">
                    <div class="card-body text-center">
                        <i class="fas fa-chart-bar fa-3x text-info mb-3"></i>
                        <h5>Real-time Tracking</h5>
                        <p class="text-muted">Monitor attendance in real-time through admin dashboard</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Links -->
        <div class="row mt-4">
            <div class="col-md-6 mb-3">
                <a href="/scanner" class="btn btn-success btn-lg w-100">
                    <i class="fas fa-camera"></i> Start Scanning QR Codes
                </a>
            </div>
            <div class="col-md-6 mb-3">
                <a href="/admin" class="btn btn-info btn-lg w-100">
                    <i class="fas fa-chart-line"></i> View Admin Dashboard
                </a>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById('excelFile').addEventListener('change', function(e) {
            const file = e.target.files[0];
            if (file) {
                uploadFile(file);
            }
        });

        // Drag and drop functionality
        const uploadArea = document.getElementById('uploadArea');
        
        uploadArea.addEventListener('dragover', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#667eea';
            uploadArea.style.backgroundColor = '#f8f9fa';
        });

        uploadArea.addEventListener('dragleave', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#ccc';
            uploadArea.style.backgroundColor = 'transparent';
        });

        uploadArea.addEventListener('drop', function(e) {
            e.preventDefault();
            uploadArea.style.borderColor = '#ccc';
            uploadArea.style.backgroundColor = 'transparent';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                const file = files[0];
                if (file.type.includes('sheet') || file.name.endsWith('.xlsx') || file.name.endsWith('.xls')) {
                    uploadFile(file);
                } else {
                    showStatus('Please upload an Excel file (.xlsx or .xls)', 'danger');
                }
            }
        });

        function uploadFile(file) {
            const formData = new FormData();
            formData.append('excelFile', file);

            showStatus('Uploading and processing file...', 'info');

            fetch('/upload-excel', {
                method: 'POST',
                body: formData
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    showStatus(`✅ Successfully processed ${data.results.length} attendees! QR codes have been generated.`, 'success');
                    setTimeout(() => {
                        window.location.href = '/admin';
                    }, 2000);
                } else {
                    showStatus(`❌ Error: ${data.error}`, 'danger');
                }
            })
            .catch(error => {
                console.error('Error:', error);
                showStatus('❌ Error uploading file. Please try again.', 'danger');
            });
        }

        function showStatus(message, type) {
            const statusDiv = document.getElementById('uploadStatus');
            statusDiv.innerHTML = `<div class="alert alert-${type}" role="alert">${message}</div>`;
        }
    </script>
</body>
</html>
